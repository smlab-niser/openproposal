# OpenProposal Platform - Environment Configuration Template
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Development - Default)
DATABASE_URL="file:./dev.db"

# PostgreSQL (Production - Uncomment and configure)
# DATABASE_URL="postgresql://username:password@localhost:5432/openproposal"

# MySQL (Alternative - Uncomment and configure)
# DATABASE_URL="mysql://username:password@localhost:3306/openproposal"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
NEXTAUTH_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Application URL
NEXTAUTH_URL="http://localhost:3001"

# Session Settings
SESSION_TIMEOUT="24h"
REFRESH_TOKEN_TIMEOUT="7d"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server Configuration
NODE_ENV="development"
PORT="3001"
HOST="localhost"

# Application Name and Details
APP_NAME="OpenProposal"
APP_DESCRIPTION="Research Proposal Submission and Review Platform"
APP_VERSION="1.0.0"

# =============================================================================
# EMAIL CONFIGURATION (Optional but recommended)
# =============================================================================

# SMTP Settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="noreply@openproposal.org"
SMTP_FROM_NAME="OpenProposal Platform"

# Email Templates
EMAIL_VERIFICATION_ENABLED="true"
PASSWORD_RESET_ENABLED="true"
NOTIFICATION_EMAILS_ENABLED="true"

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================

# Local Storage (Development)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,txt,xlsx,csv"

# Cloud Storage (Production - Choose one)
# AWS S3
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT_ID="your-project-id"
# GOOGLE_CLOUD_STORAGE_BUCKET="your-bucket-name"
# GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# =============================================================================
# CACHING & PERFORMANCE (Optional)
# =============================================================================

# Redis Configuration (Production)
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password"
# REDIS_TTL="3600"  # Cache TTL in seconds

# Session Store
# SESSION_STORE="redis"  # Options: memory, redis
# SESSION_PREFIX="openproposal:session:"

# =============================================================================
# SEARCH & INDEXING (Optional)
# =============================================================================

# Elasticsearch (Advanced search features)
# ELASTICSEARCH_URL="http://localhost:9200"
# ELASTICSEARCH_INDEX="openproposal"
# ELASTICSEARCH_USERNAME="elastic"
# ELASTICSEARCH_PASSWORD="your-password"

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# ORCID Integration
# ORCID_CLIENT_ID="your-orcid-client-id"
# ORCID_CLIENT_SECRET="your-orcid-client-secret"
# ORCID_SANDBOX="true"  # Set to false for production

# CrossRef API (For publication lookup)
# CROSSREF_API_EMAIL="your-email@domain.com"

# =============================================================================
# MONITORING & LOGGING (Production)
# =============================================================================

# Logging Level
LOG_LEVEL="info"  # Options: error, warn, info, debug

# Error Tracking (Sentry)
# SENTRY_DSN="your-sentry-dsn"
# SENTRY_ENVIRONMENT="development"

# Analytics (Google Analytics)
# GA_TRACKING_ID="UA-XXXXXXXXX-X"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Configuration
CORS_ORIGIN="http://localhost:3001"
CORS_CREDENTIALS="true"

# Rate Limiting
RATE_LIMIT_WINDOW="15"  # Minutes
RATE_LIMIT_MAX_REQUESTS="100"  # Requests per window

# Security Headers
SECURITY_HEADERS_ENABLED="true"
CSP_ENABLED="true"

# =============================================================================
# BACKUP & MAINTENANCE (Production)
# =============================================================================

# Database Backup
# DB_BACKUP_ENABLED="true"
# DB_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# DB_BACKUP_RETENTION_DAYS="30"
# DB_BACKUP_STORAGE="s3"  # Options: local, s3, gcs

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Settings
DEBUG="false"
VERBOSE_LOGGING="false"

# Development Tools
HOT_RELOAD="true"
SOURCE_MAPS="true"

# API Documentation
API_DOCS_ENABLED="true"
API_DOCS_PATH="/api/docs"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Public Venues (OpenReview-style transparency)
PUBLIC_VENUES_ENABLED="true"

# Collaborative Editing
COLLABORATIVE_EDITING_ENABLED="true"

# Real-time Notifications
REALTIME_NOTIFICATIONS_ENABLED="true"

# Budget Management
BUDGET_MANAGEMENT_ENABLED="true"

# Multi-language Support
I18N_ENABLED="false"
DEFAULT_LOCALE="en"

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL="file:./test.db"

# Test Environment
TEST_ENV="test"
TEST_TIMEOUT="30000"  # 30 seconds

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with actual secrets to version control
# 2. Use environment-specific values for different deployments
# 3. Generate strong, unique secrets for production
# 4. Regularly rotate secrets and passwords
# 5. Use tools like dotenv-vault for secret management in production